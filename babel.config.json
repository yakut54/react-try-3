{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    [
      "@babel/preset-react",
      {
        "runtime": "automatic"
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "i18next-extract",
      {
        "locales": [
          "ru",
          "en"
        ],
        "outputPath": "public/locales/{{locale}}/{{ns}}.json",
        "discardOldKeys": true,
        "keyAsDefaultValue": true
      }
    ]
  ]
}